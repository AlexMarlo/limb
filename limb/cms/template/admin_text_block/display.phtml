{{wrap with="admin_page_layout.phtml"}}
  {{into slot="content_zone"}}

    <div id="header">
      <h1>Текстовые блоки</h1>
    </div>

    <div id="body">

      {{list using='{$#blocks}' parity='{$parity}'}}

        {{include file="_admin_object/actions.phtml"/}}

        <div class="list">
          <table>
            <tr>
              <th>Статус</th>
              <th>Заголовок</th>
              <th>Содержимое</th>
              <th>Действия</th>
            </tr>
            {{list:item}}
            <tr class='{$parity}'>
              <td>
                <?
                if ($item['exists'])
                {?>
                  <img src='/shared/cms/images/icons/flag_green.png' title="Значение в базе"/>
              <?}
                else
                {?>
                  <img src='/shared/cms/images/icons/flag_red.png' title="Значения нет в базе"/>
              <?}?>
              </td>
              <td>{$item.title}</td>
              <td><?php echo nl2br(preg_replace('#(&lt;.+&gt;)#Uu', '<code style="color:red; font-size: 120%">$1</code>', htmlspecialchars($item['content']))); ?></td>
              <td class='actions'>
                <a href='{{route_url params="action:edit,id:{$item.identifier}"/}}' title="'Редактирование" class="thickbox"><img src='/shared/cms/images/icons/table_edit.png' title="Редактирование"/></a>
              </td>
              </tr>
            {{/list:item}}
            {{list:empty}}
              <div class="empty_list">Текстовые блоки отсутствуют</div>
            {{/list:empty}}
          </table>
        </div>

      {{/list}}

    </div>

  {{/into}}
{{/wrap}}
